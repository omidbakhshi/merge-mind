# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ====================
# REQUIRED SETTINGS
# ====================

# GitLab Configuration
# Your self-hosted GitLab URL (without trailing slash)
GITLAB_URL=https://gitlab.yourcompany.com

# GitLab Personal Access Token
# Create at: GitLab -> User Settings -> Access Tokens
# Required scopes: api, read_repository, write_repository
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ====================
# OPTIONAL SETTINGS
# ====================

# GitLab Webhook Secret
# Random string to validate webhook requests
# Generate with: openssl rand -hex 32
GITLAB_WEBHOOK_SECRET=your-secret-webhook-token-here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4

# API Authentication Token (if enabling API auth)
# Generate with: openssl rand -hex 32
API_AUTH_TOKEN=your-api-auth-token-here

# Pinecone Settings (if using Pinecone instead of Qdrant)
PINECONE_API_KEY=
PINECONE_ENV=us-east1-gcp
